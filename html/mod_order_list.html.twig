{% extends request.ajax ? "layout_blank.html.twig" : "layout_default.html.twig" %}

{% import "macro_functions.html.twig" as mf %}

{% block meta_title %}{{ 'My Products & Services'|trans }}{% endblock %}

{% block body_class %}order-list{% endblock %}
{% block breadcrumb %}
    <li class="breadcrumb-item active" aria-current="page">{{ 'Services'|trans }}</li>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="modern-card mb-4">
                <div class="card-header py-4 px-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h1 class="mb-1">{{ 'Services'|trans }}</h1>
                            <span class="small text-muted">{{ 'All of your orders are displayed here. Click on any service to get full information about it.'|trans }}</span>
                        </div>
                    </div>
                </div>
                <div class="card-body table-responsive p-4">
                    {{ include('partial_pending_messages.html.twig') }}
                    {% set orders = client.order_get_list(request) %}
                    {% set total = orders.total %}
                    {% set active = 0 %}
                    {% set pending_setup = 0 %}
                    {% set suspended = 0 %}
                    {% for order in orders.list %}
                        {% if order.status == 'active' %}{% set active = active + 1 %}{% endif %}
                        {% if order.status == 'pending_setup' %}{% set pending_setup = pending_setup + 1 %}{% endif %}
                        {% if order.status == 'suspended' %}{% set suspended = suspended + 1 %}{% endif %}
                    {% endfor %}
                    <div class="stats-grid d-none d-lg-grid">
                        <div class="stat-card"><div class="stat-value">{{ total }}</div><div class="stat-label">{{ 'Total services'|trans }}</div></div>
                        <div class="stat-card"><div class="stat-value">{{ active }}</div><div class="stat-label">{{ 'Active'|trans }}</div></div>
                        <div class="stat-card"><div class="stat-value">{{ pending_setup }}</div><div class="stat-label">{{ 'Pending setup'|trans }}</div></div>
                        <div class="stat-card"><div class="stat-value">{{ suspended }}</div><div class="stat-label">{{ 'Suspended'|trans }}</div></div>
                    </div>
                    <form method="get" action="" class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label for="search" class="form-label">{{ 'Search'|trans }}</label>
                            <input type="text" id="search" name="search" value="{{ request.search }}" class="form-control">
                        </div>
                        <div class="col-md-4">
                            <label for="status" class="form-label">{{ 'Status'|trans }}</label>
                            <select id="status" name="status" class="form-select">
                                <option value="">{{ 'All'|trans }}</option>
                                <option value="active"{% if request.status == 'active' %} selected{% endif %}>{{ 'Active'|trans }}</option>
                                <option value="pending_setup"{% if request.status == 'pending_setup' %} selected{% endif %}>{{ 'Pending setup'|trans }}</option>
                                <option value="suspended"{% if request.status == 'suspended' %} selected{% endif %}>{{ 'Suspended'|trans }}</option>
                                <option value="canceled"{% if request.status == 'canceled' %} selected{% endif %}>{{ 'Canceled'|trans }}</option>
                            </select>
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary w-100">{{ 'Filter'|trans }}</button>
                        </div>
                    </form>
                    {% if orders.list %}
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>{{ 'Order ID'|trans }}</th>
                                <th>{{ 'Product/Service'|trans }}</th>
                                <th>{{ 'Price'|trans }}</th>
                                <th>{{ 'Next due date'|trans }}</th>
                                <th>{{ 'Status'|trans }}</th>
                                <th>{{ 'Actions'|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for i, order in orders.list %}
                                <tr>
                                    <td><a href="{{ '/order/service/manage'|link }}/{{ order.id }}">#{{ order.id }}</a></td>
                                    <td><span>{{ order.title }}</span></td>
                                    <td>{{ order.total | money(order.currency) }} {% if order.period %}{{ order.period | period_title }}{% endif %}</td>
                                    <td>{% if order.expires_at %}{{ order.expires_at|format_date }}{% else %}-{% endif %}</td>
                                    <td>
                                        <span class="badge {% if order.status == 'active' %}bg-success{% elseif order.status == 'pending_setup' %}bg-warning{% elseif order.status == 'failed_setup' or order.status == 'suspended' or order.status == 'failed_renew' %}bg-danger{% elseif order.status == 'canceled' %}bg-secondary{% endif %}">{{ mf.status_name(order.status) }}</span>
                                    </td>
                                    <td class="actions">
                                        <a class="btn btn-sm btn-outline-primary" href="{{ '/order/service/manage'|link }}/{{ order.id }}">{{ 'Manage'|trans }}</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <div class="d-flex justify-content-center my-2 py-4">
                            <span class="m-0">{{ 'No orders yet'|trans }}</span>
                        </div>
                    {% endif %}
                    <div class="mobile-cards d-lg-none">
                        {% for i, order in orders.list %}
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>#{{ order.id }}</div>
                                        <div><span class="badge {% if order.status == 'active' %}bg-success{% elseif order.status == 'pending_setup' %}bg-warning{% elseif order.status == 'suspended' %}bg-danger{% elseif order.status == 'canceled' %}bg-secondary{% endif %}">{{ mf.status_name(order.status) }}</span></div>
                                    </div>
                                    <div class="mt-2">{{ order.title }}</div>
                                    <div class="mt-1">{{ order.total | money(order.currency) }} {% if order.period %}{{ order.period | period_title }}{% endif %}</div>
                                    <div class="mt-1">{% if order.expires_at %}{{ order.expires_at|format_date }}{% else %}-{% endif %}</div>
                                    <div class="mt-2"><a class="btn btn-sm btn-outline-primary" href="{{ '/order/service/manage'|link }}/{{ order.id }}">{{ 'Manage'|trans }}</a></div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    {{ include('partial_pagination.html.twig', { 'list': orders }) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}