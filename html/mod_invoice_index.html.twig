{% extends request.ajax ? "layout_blank.html.twig" : "layout_default.html.twig" %}

{% import "macro_functions.html.twig" as mf %}

{% block meta_title %}{{ 'Invoices'|trans }}{% endblock %}
{% block body_class %}invoice-index{% endblock %}
{% block breadcrumb %}
    <li class="breadcrumb-item active" aria-current="page">{{ 'Invoices'|trans }}</li>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="modern-card mb-4">
                <div class="card-header py-4 px-4">
                    <div class="d-flex justify-content-between align-items-center w-100">
                        <div class="w-100">
                            <h1 class="mb-1">{{ 'Invoices'|trans }}</h1>
                        </div>
                    </div>
                </div>
                <div class="card-body table-responsive p-4">
                    {{ include('partial_pending_messages.html.twig') }}
                    {% set list = client.invoice_get_list(request) %}
                    {% set total = list.total %}
                    {% set paid = 0 %}
                    {% set unpaid = 0 %}
                    {% set refunded = 0 %}
                    {% set unpaid_sum = 0 %}
                    {% for invoice in list.list %}
                        {% if invoice.status == 'paid' %}{% set paid = paid + 1 %}{% endif %}
                        {% if invoice.status == 'unpaid' %}{% set unpaid = unpaid + 1 %}{% set unpaid_sum = unpaid_sum + invoice.total %}{% endif %}
                        {% if invoice.status == 'refunded' %}{% set refunded = refunded + 1 %}{% endif %}
                    {% endfor %}
                    <div class="stats-grid d-none d-lg-grid">
                        <div class="stat-card"><div class="stat-value">{{ total }}</div><div class="stat-label">{{ 'Total invoices'|trans }}</div></div>
                        <div class="stat-card"><div class="stat-value">{{ paid }}</div><div class="stat-label">{{ 'Paid'|trans }}</div></div>
                        <div class="stat-card"><div class="stat-value">{{ unpaid }}</div><div class="stat-label">{{ 'Unpaid'|trans }}</div></div>
                        <div class="stat-card"><div class="stat-value">{{ unpaid_sum | money(profile.currency) }}</div><div class="stat-label">{{ 'Unpaid balance'|trans }}</div></div>
                    </div>
                    <form method="get" action="" class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label for="search" class="form-label">{{ 'Search'|trans }}</label>
                            <input type="text" id="search" name="search" value="{{ request.search }}" class="form-control">
                        </div>
                        <div class="col-md-4">
                            <label for="status" class="form-label">{{ 'Status'|trans }}</label>
                            <select id="status" name="status" class="form-select">
                                <option value="">{{ 'All'|trans }}</option>
                                <option value="paid"{% if request.status == 'paid' %} selected{% endif %}>{{ 'Paid'|trans }}</option>
                                <option value="unpaid"{% if request.status == 'unpaid' %} selected{% endif %}>{{ 'Unpaid'|trans }}</option>
                                <option value="refunded"{% if request.status == 'refunded' %} selected{% endif %}>{{ 'Refunded'|trans }}</option>
                            </select>
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary w-100">{{ 'Filter'|trans }}</button>
                        </div>
                    </form>
                    {% if list.list %}
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>{{ 'Invoice'|trans }}</th>
                                <th>{{ 'Title'|trans }}</th>
                                <th>{{ 'Amount'|trans }}</th>
                                <th>{{ 'Issued at'|trans }}</th>
                                <th>{{ 'Status'|trans }}</th>
                                <th>{{ 'Actions'|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for i, invoice in list.list %}
                                <tr>
                                    <td><a href="{{ 'client/invoice'|link }}/{{ invoice.hash }}">{{ invoice.id }}</a></td>
                                    <td>{{ invoice.title }}</td>
                                    <td>{{ invoice.total | money(invoice.currency) }}</td>
                                    <td>{{ invoice.created_at|format_date }}</td>
                                    <td>
                                        <span class="badge {% if invoice.status == 'paid' %}bg-success{% elseif invoice.status == 'unpaid' %}bg-warning{% elseif invoice.status == 'refunded' %}bg-secondary{% endif %}">{{ mf.status_name(invoice.status) }}</span>
                                    </td>
                                    <td class="actions">
                                        <a class="btn btn-sm btn-outline-primary" href="{{ 'client/invoice'|link }}/{{ invoice.hash }}">{{ 'View'|trans }}</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <div class="d-flex justify-content-center my-2 py-4">
                            <span class="m-0">{{ 'No invoices yet'|trans }}</span>
                        </div>
                    {% endif %}
                    <div class="mobile-cards d-lg-none">
                        {% for i, invoice in list.list %}
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>{{ invoice.id }}</div>
                                        <div><span class="badge {% if invoice.status == 'paid' %}bg-success{% elseif invoice.status == 'unpaid' %}bg-warning{% elseif invoice.status == 'refunded' %}bg-secondary{% endif %}">{{ mf.status_name(invoice.status) }}</span></div>
                                    </div>
                                    <div class="mt-2">{{ invoice.title }}</div>
                                    <div class="mt-1">{{ invoice.total | money(invoice.currency) }}</div>
                                    <div class="mt-1">{{ invoice.created_at|format_date }}</div>
                                    <div class="mt-2"><a class="btn btn-sm btn-outline-primary" href="{{ 'client/invoice'|link }}/{{ invoice.hash }}">{{ 'View'|trans }}</a></div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    {{ include('partial_pagination.html.twig', { 'list': list }) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}