{% extends request.ajax ? "layout_blank.html.twig" : "layout_default.html.twig" %}

{% import "macro_functions.html.twig" as mf %}

{% block meta_title %}{{ 'Order'|trans }}{% endblock %}
{% block body_class %}order-index{% endblock %}
{% block breadcrumb %}
    <li class="active breadcrumb-item" aria-current="page">{{ 'Order'|trans }}</li>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="modern-card mb-4">
                <div class="card-header py-3">
                    <div class="d-flex justify-content-between align-items-center w-100">
                        <div class="w-100">
                            <h1 class="mb-1">{{ 'Products'|trans }}</h1>
                            {{ include('mod_orderbutton_currency.html.twig') }}
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    {{ include('partial_pending_messages.html.twig') }}
                    {{ include('mod_orderbutton_index.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block sidebar2 %}
    {{ include('partial_currency.html.twig') }}
{% endblock %}

{% block js %}
{% autoescape "js" %}
<script type="text/javascript">
function resizeIframe(obj){obj.style.height=obj.contentWindow.document.documentElement.scrollHeight+'px';}
</script>
{% endautoescape %}
{{ include('mod_orderbutton_js.html.twig') }}
<script>
document.addEventListener('DOMContentLoaded',function(){
  var hasProduct = {{ request.product ? 'true' : 'false' }};
  if(hasProduct){
    var el=document.getElementById('order');
    if(el && typeof bootstrap!=='undefined'){
      var c=bootstrap.Collapse.getOrCreateInstance(el,{toggle:false});
      c.show();
      var btn=document.querySelector('button[data-bs-target="#order"]');
      if(btn){btn.classList.remove('collapsed');btn.setAttribute('aria-expanded','true');}
    }
  }
});
</script>
{% endblock %}