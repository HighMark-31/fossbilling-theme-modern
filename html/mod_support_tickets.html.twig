{% extends request.ajax ? "layout_blank.html.twig" : "layout_default.html.twig" %}

{% import "macro_functions.html.twig" as mf %}

{% block meta_title %}{{ 'Support tickets'|trans }}{% endblock %}
{% block body_class %}support-index{% endblock %}
{% block breadcrumb %}
    <li class="breadcrumb-item active" aria-current="page">{{ 'Support'|trans }}</li>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="modern-card mb-4">
                <div class="card-header py-4 px-4">
                    <div class="d-flex justify-content-between align-items-center w-100">
                        <div class="w-100">
                            <h1 class="mb-1">{{ 'Support tickets'|trans }}</h1>
                            <a class="btn btn-primary btn-sm" href="{{ 'support/contact-us'|link }}">{{ 'Contact support'|trans }}</a>
                        </div>
                    </div>
                </div>
                <div class="card-body table-responsive p-4">
                    {{ include('partial_pending_messages.html.twig') }}
                    {% set tickets = client.support_ticket_get_list(request) %}
                    {% set total = tickets.total %}
                    {% set open = 0 %}
                    {% set on_hold = 0 %}
                    {% set closed = 0 %}
                    {% for t in tickets.list %}
                        {% if t.status == 'open' %}{% set open = open + 1 %}{% endif %}
                        {% if t.status == 'on_hold' %}{% set on_hold = on_hold + 1 %}{% endif %}
                        {% if t.status == 'closed' %}{% set closed = closed + 1 %}{% endif %}
                    {% endfor %}
                    <div class="stats-grid d-none d-lg-grid">
                        <div class="stat-card"><div class="stat-value">{{ total }}</div><div class="stat-label">{{ 'Total tickets'|trans }}</div></div>
                        <div class="stat-card"><div class="stat-value">{{ open }}</div><div class="stat-label">{{ 'Open'|trans }}</div></div>
                        <div class="stat-card"><div class="stat-value">{{ on_hold }}</div><div class="stat-label">{{ 'On hold'|trans }}</div></div>
                        <div class="stat-card"><div class="stat-value">{{ closed }}</div><div class="stat-label">{{ 'Closed'|trans }}</div></div>
                    </div>
                    <form method="get" action="" class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label for="search" class="form-label">{{ 'Search'|trans }}</label>
                            <input type="text" id="search" name="search" value="{{ request.search }}" class="form-control">
                        </div>
                        <div class="col-md-4">
                            <label for="status" class="form-label">{{ 'Status'|trans }}</label>
                            <select id="status" name="status" class="form-select">
                                <option value="">{{ 'All'|trans }}</option>
                                <option value="open"{% if request.status == 'open' %} selected{% endif %}>{{ 'Open'|trans }}</option>
                                <option value="on_hold"{% if request.status == 'on_hold' %} selected{% endif %}>{{ 'On hold'|trans }}</option>
                                <option value="closed"{% if request.status == 'closed' %} selected{% endif %}>{{ 'Closed'|trans }}</option>
                            </select>
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary w-100">{{ 'Filter'|trans }}</button>
                        </div>
                    </form>
                    {% if tickets.list %}
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>{{ 'ID'|trans }}</th>
                                <th>{{ 'Subject'|trans }}</th>
                                <th>{{ 'Status'|trans }}</th>
                                <th>{{ 'Updated'|trans }}</th>
                                <th>{{ 'Actions'|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for i, t in tickets.list %}
                                <tr>
                                    <td><a href="{{ 'support/ticket'|link }}/{{ t.id }}">#{{ t.id }}</a></td>
                                    <td>{{ t.subject }}</td>
                                    <td>
                                        <span class="badge {% if t.status == 'open' %}bg-success{% elseif t.status == 'on_hold' %}bg-warning{% elseif t.status == 'closed' %}bg-secondary{% endif %}">{{ mf.status_name(t.status) }}</span>
                                    </td>
                                    <td>{{ t.updated_at|format_date }}</td>
                                    <td class="actions">
                                        <a class="btn btn-sm btn-outline-primary" href="{{ 'support/ticket'|link }}/{{ t.id }}">{{ 'View'|trans }}</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <div class="d-flex justify-content-center my-2 py-4">
                            <span class="m-0">{{ 'No tickets yet'|trans }}</span>
                        </div>
                    {% endif %}
                    <div class="mobile-cards d-lg-none">
                        {% for i, t in tickets.list %}
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>#{{ t.id }}</div>
                                        <div><span class="badge {% if t.status == 'open' %}bg-success{% elseif t.status == 'on_hold' %}bg-warning{% elseif t.status == 'closed' %}bg-secondary{% endif %}">{{ mf.status_name(t.status) }}</span></div>
                                    </div>
                                    <div class="mt-2">{{ t.subject }}</div>
                                    <div class="mt-1">{{ t.updated_at|format_date }}</div>
                                    <div class="mt-2"><a class="btn btn-sm btn-outline-primary" href="{{ 'support/ticket'|link }}/{{ t.id }}">{{ 'View'|trans }}</a></div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    {{ include('partial_pagination.html.twig', { 'list': tickets }) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}