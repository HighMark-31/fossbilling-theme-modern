{% if messages %}
    <div class="space-y-3 mb-6">
        {% for message in messages %}
            {% set message_type = message.type|default('info') %}
            {% set message_icon = '' %}
            {% set message_class = '' %}
            
            {% if message_type == 'success' %}
                {% set message_icon = 'check-circle' %}
                {% set message_class = 'modern-alert-success' %}
            {% elseif message_type == 'warning' %}
                {% set message_icon = 'exclamation-triangle' %}
                {% set message_class = 'modern-alert-warning' %}
            {% elseif message_type == 'error' %}
                {% set message_icon = 'x-circle' %}
                {% set message_class = 'modern-alert-danger' %}
            {% else %}
                {% set message_icon = 'information-circle' %}
                {% set message_class = 'modern-alert-info' %}
            {% endif %}
            
            <div class="{{ message_class }} flex items-start">
                <svg class="h-5 w-5 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    {% if message_icon == 'check-circle' %}
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    {% elseif message_icon == 'exclamation-triangle' %}
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                    {% elseif message_icon == 'x-circle' %}
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    {% else %}
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    {% endif %}
                </svg>
                <div class="flex-1">
                    {% if message.message is iterable %}
                        {% for msg in message.message %}
                            <p class="text-sm">{{ msg|trans }}</p>
                        {% endfor %}
                    {% else %}
                        <p class="text-sm">{{ message.message|trans }}</p>
                    {% endif %}
                </div>
                <button type="button" class="ml-3 text-sm font-medium" onclick="this.parentElement.remove()">
                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
        {% endfor %}
    </div>
{% endif %}